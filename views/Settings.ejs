<!DOCTYPE html>
<html lang="en" itemscope itemtype="https://schema.org/WebPage">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title itemprop="name" data-i18n="settings.page.title">Settings | SAO</title>
</head>
<body>

<%- include('partials/header', { page: 'settings', showAccount: true }) %>

<main id="main">

    <section aria-labelledby="personal-settings" itemscope itemtype="https://schema.org/Person" itemprop="mainEntity">
        <h2 id="personal-settings" itemprop="name" data-i18n="settings.title">Settings</h2>
        <form action="#" method="post" aria-label="Personal settings form">

            <!-- Name + Email -->
            <div class="row">
                <label for="name" data-i18n="settings.form.name.label">Name:</label>
                <input type="text" id="name" name="name" placeholder="" itemprop="name" data-i18n-placeholder="settings.form.name.placeholder">

                <label for="email" data-i18n="settings.form.email.label">Email:</label>
                <input type="email" id="email" name="email" placeholder="" itemprop="email" data-i18n-placeholder="settings.form.email.placeholder">
            </div>

            <!-- Password -->
            <div class="row">
                <label for="password" data-i18n="settings.form.password.label">Password:</label>
                <input type="password" id="password" name="password" placeholder="" data-i18n-placeholder="settings.form.password.placeholder">
                <div>
                    <button type="button" id="change-password" data-i18n="settings.form.password.change">Change Password</button>
                </div>
            </div>

            <!-- Profile Photo -->
            <div class="row" itemprop="image" itemscope itemtype="https://schema.org/ImageObject">
                <div>
                    <span data-i18n="settings.profile.photo.title">Profile Photo</span>
                    <div aria-hidden="true">
                        <picture>
                            <source srcset="img/profile-placeholder.webp" type="image/webp">
                            <img src="img/profile-placeholder.png" alt="Profile photo" width="80" height="80" itemprop="contentUrl">
                        </picture>
                    </div>
                </div>
                <div>
                    <label for="photo-upload">
                        <input id="photo-upload" name="photo" type="file" accept="image/*" hidden>
                        <button type="button" data-i18n="settings.profile.photo.upload">Upload New Photo</button>
                    </label>
                </div>
            </div>

            <!-- Notifications -->
            <h3 data-i18n="settings.notifications.title">Notifications</h3>
            <div role="group" aria-label="Notification settings">
                <label for="notif-email">
                    <span data-i18n="settings.notifications.email">Email Reminders</span>
                    <input id="notif-email" name="notif-email" type="checkbox" role="switch" aria-checked="true" checked>
                </label>

                <label for="notif-reports">
                    <span data-i18n="settings.notifications.reports">Reports</span>
                    <input id="notif-reports" name="notif-reports" type="checkbox" role="switch" aria-checked="false">
                </label>
            </div>

            <!-- Billing -->
            <article aria-labelledby="billing-info">
                <h3 id="billing-info" data-i18n="settings.billing.title">Billing</h3>
                <div data-i18n="settings.billing.subscription">Subscription: Premium Plan</div>
                <div>
                    <button type="button" id="upgrade-plan" data-i18n="settings.billing.upgrade">Upgrade Plan</button>
                </div>
                <div data-i18n="settings.billing.payment_options">Payment Options: Visa **** 1488</div>
            </article>

            <!-- Main action -->
            <div>
                <button type="submit" id="save-changes" data-i18n="settings.actions.save">Save Changes</button>
            </div>

        </form>
    </section>

</main>

<%- include('partials/footer') %>
</body>
</html>
