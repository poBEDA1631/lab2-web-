<!DOCTYPE html>
<html lang="en" itemscope itemtype="https://schema.org/WebPage">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title itemprop="name" data-i18n="projects.page.title">Projects | SAO</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- include('partials/header', { page: 'projects' , showAccount: true }) %>

        <main id="main" class="container" itemscope itemtype="https://schema.org/ItemList" itemprop="mainEntity">
            <h2 id="projects-title" class="mb-3" itemprop="name" data-i18n="projects.page.heading">Projects</h2>

            <section aria-labelledby="projects-search" class="card mb-4">
                <div class="card__content search-bar">
                    <form action="#" method="get" role="search" aria-label="Search projects" class="d-flex"
                        style="gap: 1rem; align-items: center;">
                        <input id="search" type="search" name="q" placeholder=""
                            data-i18n-placeholder="projects.search.placeholder" class="p-1"
                            style="flex: 1; border: 1px solid #ccc; border-radius: 4px;">
                        <button type="submit" class="btn btn--primary"
                            data-i18n="projects.search.button">Search</button>
                        <button type="submit" class="btn btn--secondary" aria-label="Create new project"
                            data-i18n="projects.search.newProject">New Project</button>
                    </form>
                </div>
            </section>

            <section aria-labelledby="project-list">
                <h2 id="project-list" class="mb-3" data-i18n="projects.list.heading">Active Projects</h2>

                <div class="row">
                    <div class="col-12">
                        <ol class="p-0">
                            <li itemscope itemtype="https://schema.org/ListItem" itemprop="itemListElement"
                                class="card mb-3 project-card">
                                <div class="card__content d-flex"
                                    style="justify-content: space-between; align-items: center;">
                                    <div>
                                        <span itemprop="name" class="card__title"
                                            data-i18n="projects.list.alpha.name">Project Alpha</span>
                                        <meta itemprop="position" content="1">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Client">
                                            <small class="card__text" data-i18n="projects.list.alpha.client">Client
                                                A</small>
                                        </div>
                                    </div>

                                    <div class="d-flex" style="gap: 2rem;">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Status">
                                            <span class="project-card__status project-card__status--active"
                                                data-i18n="projects.list.alpha.status">Active</span>
                                            <meta itemprop="value" content="Active">
                                        </div>
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Total Time">
                                            <span style="font-weight: bold;"
                                                data-i18n="projects.list.alpha.time">120h</span>
                                            <meta itemprop="value" content="120h">
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li itemscope itemtype="https://schema.org/ListItem" itemprop="itemListElement"
                                class="card mb-3 project-card">
                                <div class="card__content d-flex"
                                    style="justify-content: space-between; align-items: center;">
                                    <div>
                                        <span itemprop="name" class="card__title"
                                            data-i18n="projects.list.beta.name">Project Beta</span>
                                        <meta itemprop="position" content="2">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Client">
                                            <small class="card__text" data-i18n="projects.list.beta.client">Client
                                                B</small>
                                        </div>
                                    </div>

                                    <div class="d-flex" style="gap: 2rem;">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Status">
                                            <span class="project-card__status project-card__status--completed"
                                                data-i18n="projects.list.beta.status">Completed</span>
                                            <meta itemprop="value" content="Completed">
                                        </div>
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Total Time">
                                            <span style="font-weight: bold;"
                                                data-i18n="projects.list.beta.time">80h</span>
                                            <meta itemprop="value" content="80h">
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li itemscope itemtype="https://schema.org/ListItem" itemprop="itemListElement"
                                class="card mb-3 project-card">
                                <div class="card__content d-flex"
                                    style="justify-content: space-between; align-items: center;">
                                    <div>
                                        <span itemprop="name" class="card__title"
                                            data-i18n="projects.list.gamma.name">Project Gamma</span>
                                        <meta itemprop="position" content="3">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Client">
                                            <small class="card__text" data-i18n="projects.list.gamma.client">Client
                                                C</small>
                                        </div>
                                    </div>

                                    <div class="d-flex" style="gap: 2rem;">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Status">
                                            <span class="project-card__status project-card__status--active"
                                                data-i18n="projects.list.gamma.status">Active</span>
                                            <meta itemprop="value" content="Active">
                                        </div>
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Total Time">
                                            <span style="font-weight: bold;"
                                                data-i18n="projects.list.gamma.time">150h</span>
                                            <meta itemprop="value" content="150h">
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li itemscope itemtype="https://schema.org/ListItem" itemprop="itemListElement"
                                class="card mb-3 project-card">
                                <div class="card__content d-flex"
                                    style="justify-content: space-between; align-items: center;">
                                    <div>
                                        <span itemprop="name" class="card__title"
                                            data-i18n="projects.list.delta.name">Project Delta</span>
                                        <meta itemprop="position" content="4">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Client">
                                            <small class="card__text" data-i18n="projects.list.delta.client">Client
                                                D</small>
                                        </div>
                                    </div>

                                    <div class="d-flex" style="gap: 2rem;">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Status">
                                            <span class="project-card__status"
                                                style="background-color: #ccc; color: #333;"
                                                data-i18n="projects.list.delta.status">Archived</span>
                                            <meta itemprop="value" content="Archived">
                                        </div>
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Total Time">
                                            <span style="font-weight: bold;"
                                                data-i18n="projects.list.delta.time">60h</span>
                                            <meta itemprop="value" content="60h">
                                        </div>
                                    </div>
                                </div>
                            </li>

                            <li itemscope itemtype="https://schema.org/ListItem" itemprop="itemListElement"
                                class="card mb-3 project-card">
                                <div class="card__content d-flex"
                                    style="justify-content: space-between; align-items: center;">
                                    <div>
                                        <span itemprop="name" class="card__title"
                                            data-i18n="projects.list.epsilon.name">Project Epsilon</span>
                                        <meta itemprop="position" content="5">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Client">
                                            <small class="card__text" data-i18n="projects.list.epsilon.client">Client
                                                E</small>
                                        </div>
                                    </div>

                                    <div class="d-flex" style="gap: 2rem;">
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Status">
                                            <span class="project-card__status project-card__status--active"
                                                data-i18n="projects.list.epsilon.status">Active</span>
                                            <meta itemprop="value" content="Active">
                                        </div>
                                        <div itemprop="additionalProperty" itemscope
                                            itemtype="https://schema.org/PropertyValue">
                                            <meta itemprop="name" content="Total Time">
                                            <span style="font-weight: bold;"
                                                data-i18n="projects.list.epsilon.time">90h</span>
                                            <meta itemprop="value" content="90h">
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </section>
        </main>

        <%- include('partials/footer') %>
</body>

</html>