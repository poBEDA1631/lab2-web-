<header>
  <h1 data-i18n="app.title">SAO</h1>
  
  <nav aria-label="Main navigation">
    <ul>
      <li>
        <a href="/" <%= page === 'overview' ? 'aria-current="page"' : '' %> data-i18n="overview.title">Overview</a>
      </li>
      <li>
        <a href="/projects" <%= page === 'projects' ? 'aria-current="page"' : '' %> data-i18n="projects.title">Projects</a>
      </li>
      <li>
        <a href="/reports" <%= page === 'reports' ? 'aria-current="page"' : '' %> data-i18n="reports.title">Reports</a>
      </li>
      <li>
        <a href="/settings" <%= page === 'settings' ? 'aria-current="page"' : '' %> data-i18n="settings.title">Settings</a>
      </li>
    </ul>
  </nav>

  <div class="header-actions" role="group" aria-label="User actions">

    <!-- Live toggle -->
    <button id="btn-live" type="button" aria-pressed="false" aria-label="Live mode" title="Live">
      <span aria-hidden="true">â—</span>
      <span class="visually-hidden" data-i18n="header.liveModeOff">Live mode off</span>
    </button>

    <!-- Notifications -->
    <button id="btn-notifications" type="button" aria-label="Notifications" aria-pressed="false">
      <span aria-hidden="true">ğŸ””</span>
      <span class="visually-hidden" data-i18n="header.notifications">You have new messages</span>
    </button>

    <% if (showAccount) { %>
    <!-- Account -->
    <button id="btn-account" type="button" aria-haspopup="true" aria-expanded="false" aria-controls="account-menu" aria-label="User account">
      <img src="img/avatar-small.png" alt="User avatar" width="24" height="24">
    </button>
    <ul id="account-menu" role="menu" hidden>
      <li role="menuitem">
        <a href="logout.html" data-i18n="header.logout">Logout</a>
      </li>
    </ul>
    <% } %>

    <!-- Language switcher -->
    <div id="lang-switcher">
      <button type="button" onclick="setLanguage('en')">EN</button>
      <button type="button" onclick="setLanguage('uk')">UK</button>
    </div>
  </div>
</header>

<script src="/translations.js"></script>
<script>
  // Set default language
  setLanguage('en');
</script>